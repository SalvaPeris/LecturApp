<h1 class="mx-auto ">Tus notas para compartir</h1>
<hr>
<div class="row mb-2">
    {{#each notes}}
    <div class="col-md-3">
         <div class="card shadow mt-2">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between">
                    {{title}} <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
                </h4>
                <p>{{description}}</p>
                <p id="noteid">{{_id}}</p>
                <button onclick="copyToClipboard('#noteid')" class="btn btn-secondary btn-block btn-sm mb-2">Copiar</button>
                <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                    <button class="btn btn-danger btn-block btn-sm" type="submit">Borrar</button>
                </form>
            </div>
        </div>
    </div> 

    {{/each}}
</div>
<div class="button-exit mx-auto">
    <a href="/notes" class="btn btn-danger">Volver
    </a>   
</div>
